@model List<Employee>;
@{
    ViewData["Title"] = "Employees";
}
<H1>Employee Index Page</H1>

<h2>@ViewData["Title"]</h2>                                                     

<table class="table table-striped table-bordered">                               
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Age</th>
            <th>Department</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach(Employee emp in Model)
        {
            
        <tr>
            <td>@emp.Id</td>                                    
            <td>@emp.Name</td>                                                   
            <td>@emp.Age</td>                                                      
                <td>@emp.Department</td>                                     
            <td>@emp.Salary.ToString("C")</td>                                  
            <td>
                <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-primary">Edit</a>
                <form asp-action="Delete" asp-route-id="@emp.Id" method="post" class="d-inline">
                    <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Delete this employee?');">Delete</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>

<a asp-action="Create" class="btn btn-success">Add New Employee</a>
